
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
@using PerformanceEvaluationSystem.Models
@model List<User>

<div class="col-md-12">
    <div class="panel panel-filled">
        <div class="panel-heading">
            <div class="panel-tools">
                <a class="panel-toggle"><i class="fa fa-chevron-up"></i></a>
            </div>
            Personeller
        </div>
        <div class="panel-body">
            <div class="table-responsive">
                <table id="tableExample2" class="table table-striped table-hover dataTable no-footer">
                    <thead>
                        <tr>
                            <th>Sicil Numarası</th>
                            <th>Adı Soyadı</th>
                            <th>Email</th>
                            @*<th>Atanmış Hedef Sayısı</th>*@
                            @*<th>Hedef Ağırlıkları Toplamı</th> değiştirilecek *@
                            <th>Değerlendir</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (User u in Model)
                        {
                        <tr>
                            @if (u.IsActive == true)
                            {
                                <td>@u.RegistryNumber</td>
                                <td>@u.Name @u.Surname</td>
                                <td>@u.Email</td>
                                if(ViewBag.isFirstManagerEvaluation)
                                {
                                    <td><a href="/Evaluation/FirstManagerEvaluation?id=@u.ID" class="btn btn-info rounded">Değerlendir</a></td>
                                }
                                else
                                {
                                    <td><a href="/Evaluation/SecondManagerEvaluation?id=@u.ID" class="btn btn-info rounded">Değerlendir</a></td>
                                }

                            }
                        </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>

