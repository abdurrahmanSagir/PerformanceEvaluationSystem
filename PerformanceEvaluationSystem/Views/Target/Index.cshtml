
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
@using PerformanceEvaluationSystem.Models;

@using PerformanceEvaluationSystem.App_Classes;

@model List<User>

<div class="col-md-12">
    <div class="panel panel-filled">
        <div class="panel-heading">
            <div class="panel-tools">                
                <a class="panel-toggle"><i class="fa fa-chevron-up"></i></a>                
            </div>
            Personeller
        </div>
        <div class="panel-body">
            <div class="table-responsive">
                <table id="tableExample2" class="table table-striped table-hover dataTable no-footer">
                    <thead>
                        <tr>
                            <th>Sicil Numarası</th>
                            <th>Adı Soyadı</th>
                            <th>Email</th>
                            @*<th>Atanmış Hedef Sayısı</th>*@
                            @*<th>Hedef Ağırlıkları Toplamı</th> değiştirilecek *@
                            <th>Hedef Ata</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (User u in Model)
                        {
                            <tr>
                                @if (u.IsActive == true)
                                {
                                    <td>@u.RegistryNumber</td>
                                    <td>@u.Name @u.Surname</td>
                                    <td>@u.Email</td>
                                    <td><a href="/Target/AddTarget?id=@u.ID" class="btn btn-info rounded">Hedef Ata</a></td>
                                }
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>

