
@{
    ViewBag.Title = "UpdateEmployee";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

@using PerformanceEvaluationSystem.Models;

@model User

<div class="col-md-12">
    <div class="panel panel-filled">
        <div class="panel-heading">
            <div class="panel-tools">
                <a class="panel-toggle"><i class="fa fa-chevron-up"></i></a>
            </div>
            Personel Veri Güncelleme
        </div>
        <div class="panel-body">
            <form action="/Employee/UpdateEmployee" method="post" id="loginForm">
                <div class="form-group">
                    <label>Adı</label>
                    <input type="text" class="form-control" placeholder="Ad Giriniz" name="Name" value="@Model.Name">
                </div>
                <div class="form-group">
                    <label>Soyadı</label>
                    <input type="text" class="form-control" placeholder="Soyadı Giriniz" name="Surname" value="@Model.Surname">
                </div>
                <div class="form-group">
                    <label>Sicil Numarası</label>
                    <input type="text" class="form-control" placeholder="Sicil Numarası Giriniz" name="RegistryNumber" value="@Model.RegistryNumber">
                </div>
                <div class="form-group">
                    <label for="exampleInputName">Telefon Numarası</label>
                    <input type="text" class="form-control" placeholder="Telefon Numarası Giriniz" name="PhoneNumber" value="@Model.PhoneNumber">
                </div>
                <div class="form-group">
                    <label>Email</label>
                    <input type="email" class="form-control" placeholder="Email Giriniz" name="Email" value="@Model.Email">
                </div>
                <div class="form-group">
                    <label>Şirket Adı</label>
                    <input type="text" class="form-control" placeholder="Şirket Adı Giriniz" name="CompanyName" value="@Model.CompanyName">
                </div>
                @*<div class="form-group">
                        <label for="exampleInputName">Rol Atama</label>
                        <select class="form-control" name="ID">
                            @foreach (Role rl in ViewBag.Role)
                            {
                                if (rl.ID != 15)
                                {
                                    <option value="@rl.ID">@rl.Name</option>
                                }

                            }
                        </select>
                    </div>*@
                <div class="form-group">
                    <label for="exampleInputName">Hedef Giriş Yöneticisi</label>
                    @Html.DropDownList("TargetAssignmentManagerID", null, new { @class = "form-control" })
                </div>
                <div class="form-group">
                    <label for="exampleInputName">1. Yönetici</label>
                    @Html.DropDownList("FirstManagerID", null, new { @class = "form-control" })
                </div>
                <div class="form-group">
                    <label for="exampleInputName">2. Yönetici</label>
                    @Html.DropDownList("SecondManagerID", null, new { @class = "form-control" })
                </div>
                <button type="submit" class="btn btn-default">Kaydet</button>
            </form>
        </div>
    </div>
</div>

