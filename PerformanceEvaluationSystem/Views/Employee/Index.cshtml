
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

@using PerformanceEvaluationSystem.Models;

@using PerformanceEvaluationSystem.App_Classes;

@model List<UsersDto>

<div class="col-md-12">
    <div class="panel panel-filled">
        <div class="panel-heading">
            <div class="panel-tools">
                <a href="/Employee/AddEmployee" class="btn btn-default btn-xs btn btn-success ">Personel Ekle</a>
                <a class="panel-toggle"><i class="fa fa-chevron-up"></i></a>
                <a class="panel-close"><i class="fa fa-times"></i></a>
            </div>
            Personeller
        </div>
        <div class="panel-body">
            <div class="table-responsive">
                <table id="tableExample2" class="table table-striped table-hover dataTable no-footer">
                    <thead>
                        <tr>
                            <th>Sicil Numarası</th>
                            <th>Adı Soyadı</th>
                            <th>Telefon Numarası</th>
                            <th>Email</th>
                            <th>Şirket Adı</th>
                            <th>Hedef Giriş Yöneticisi</th>
                            <th>1. Yönetici</th>
                            <th>2. Yönetici</th>
                            <th>Güncelle</th>
                            <th>Sil</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (UsersDto u in Model)
                        {
                        <tr>
                            @if (u.IsActive == true)
                            {
                                <td>@u.RegistryNumber</td>
                                <td>@u.Name @u.Surname</td>
                                <td>@u.PhoneNumber</td>
                                <td>@u.Email</td>
                                <td>@u.CompanyName</td>
                                <td>@u.TargetAssignmentManagerName</td>
                                <td>@u.FirstManagerName</td>
                                <td>@u.SecondManagerName</td>
                                <td><a href="/Employee/UpdateEmployee/@u.RegistryNumber" class="btn btn-info rounded">Güncelle</a></td>
                                <td><a href="/Employee/DeleteEmployee/@u.RegistryNumber" class="btn btn-danger rounded">Sil</a></td>
                            }
                        </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>

