
@{
    ViewBag.Title = "AddRole";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

@using PerformanceEvaluationSystem.Models;

<div class="col-md-12">
    <div class="panel panel-filled">
        <div class="panel-heading">
            <div class="panel-tools">
                <a class="panel-toggle"><i class="fa fa-chevron-up"></i></a>
            </div>
            Rol Ekle
        </div>
        <div class="panel-body">
            <form action="/Role/AddRole" method="post" id="loginForm">
                <div class="form-group">
                    <label>Adı</label>
                    <input type="text" class="form-control" placeholder="Ad Giriniz" name="Name">
                </div>
                <div class="form-group">
                    <label>Açıklama</label>
                    <input type="text" class="form-control" placeholder="Açıklama Giriniz" name="Description">
                </div>
                <button type="submit" class="btn btn-default">Kaydet</button>
            </form>
        </div>
    </div>
</div>
