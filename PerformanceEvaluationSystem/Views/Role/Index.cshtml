
@{
    ViewBag.Title = "Index";

}

@model List<Role>

@using PerformanceEvaluationSystem.Models;

<div class="col-md-12">
    <div class="panel panel-filled">
        <div class="panel-heading">
            <div class="panel-tools">
                <a href="/Role/AddRole" class="btn btn-default btn-xs btn btn-success ">Rol Ekle</a>
                <a class="panel-toggle"><i class="fa fa-chevron-up"></i></a>
                <a class="panel-close"><i class="fa fa-times"></i></a>
            </div>
            Roller
        </div>
        <div class="panel-body">
            <div class="table-responsive">
                <table id="tableExample2" class="table table-striped table-hover dataTable no-footer">
                    <thead>
                        <tr>
                            <th>Adı</th>
                            <th>Açıklama</th>
                            <th>Sil</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (Role rl in Model)
                        {

                            if (rl.IsDeleted == false)
                            {
                                <tr>
                                    <td>@rl.Name</td>
                                    <td>@rl.Description</td>
                                    <td><a href="/Role/DeleteRole/@rl.ID" class="btn btn-danger rounded">Sil</a></td>
                                </tr>
                            }
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>


